            @Html.DisplayNameFor(model => model.ScheduledFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureTime)
        </th>
