@using System.Runtime.CompilerServices
@using JobCardSystem.Constants
@model IEnumerable<JobCardSystem.Core.Domain.JobCard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TableLayout.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobStatus.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduledFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.JobStatus.Name, "Edit", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledFor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
        <td>
            @if (User.IsInRole(UserRoles.Admin))
            {
             @Html.ActionLink("Delete", "Delete", new { id = item.Id }) 
            }
            | @Html.ActionLink("Update", "Edit", new { id = item.Id }) 
        </td>
    </tr>
}

</table>
