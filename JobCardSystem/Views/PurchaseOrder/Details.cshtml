@model IEnumerable<JobCardSystem.Core.Domain.Configurations.PurchaseOrderItem>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_TableLayout.cshtml";
}



<h2 class="ml-3">
    @Html.ActionLink("Add Items", "Create")
</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockItem.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountOfItems)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockItem.Cost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.StockItem.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountOfItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockItem.Cost)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteStockItem", new { id = item.Id })
        </td>
    </tr>
}

</table>
