
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<section class="section pb-5">

    <h2 class="section-heading h1 pt-4">Contact us</h2>

    <div class="row">


        <div class="col-lg-5 mb-4">

            <div class="card">

                <div class="card-body">
                    <div class="form-header blue accent-1">
                        <h2><i class="fas fa-envelope fa-lg"></i>   Write to us:</h2>
                    </div>

                    <br>

                    <div class="md-form">
                        <i class="fas fa-user fa-lg prefix grey-text"></i>
                        <label for="form-name">Name</label>
                        <input type="text" id="form-name" class="form-control">
                    </div>

                    <div class="md-form">
                        <i class="fas fa-envelope fa-lg prefix grey-text"></i>
                        <label for="form-email">Your Email</label>
                        <input type="text" id="form-email" class="form-control">
                    </div>

                    <div class="md-form">
                        <i class="fas fa-tag fa-lg prefix grey-text"></i>
                        <label for="form-Subject">Subject</label>
                        <input type="text" id="form-Subject" class="form-control">
                    </div>

                    <div class="md-form">
                        <i class="fas fa-pencil-alt fa-lg prefix grey-text"></i>
                        <label for="form-text">Message</label>
                        <textarea id="form-text" class="form-control md-textarea" rows="3"></textarea>
                    </div>
                    <br />
                    <div class="text-center mt-lg-5">
                        <button type="button" class="btn btn-primary btn-rounded">Submit</button>
                    </div>

                </div>

            </div>

        </div>


        <br />
        <br />
        <div class="col-lg-7">


            <div id="map" class="z-depth-1-half map-container" style="height: 400px"></div>
            <script>

                    function initMap() {
                        var sss = { lat: -29.760733, lng: 31.062718 };
                        var map = new google.maps.Map(
                            document.getElementById('map'), { zoom: 17, center: sss });
                        var marker = new google.maps.Marker({ position: sss, map: map });
                    }
            </script>

            <script async defer
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD5kWpfAZSDb92WM9UUSmN_psKjmDiey4w&callback=initMap">
            </script>


            <br />
            <br />

            <div class="row text-center">
                <div class="col-md-4">
                    <a class="btn-lg btn btn-outline-primary btn-rounded waves-effect"><i class="fas fa-map-marker-alt fa-2x"></i></a>
                    <br />
                    <p><strong>OUR ADDRESS:</strong></p>
                    <p>
                        38 Braemar Avenue <br />
                        Glen Ashley <br />
                        Durban North <br />
                        4051
                    </p>
                </div>

                <div class="col-md-4">
                    <a class="btn-lg btn btn-outline-success btn-rounded waves-effect"><i class="fas fa-phone fa-2x"></i></a>
                    <br />
                    <p><strong>FOR GENERAL ENQUIRIES:</strong></p>
                    <p>
                        Tel: (031) 572 6726 <br />
                        Fax: 086 552 6390
                    </p>
                </div>

                <div class="col-md-4">
                    <a class="btn-lg btn btn-outline-warning btn-rounded waves-effect"><i class="fas fa-envelope fa-2x"></i></a>
                    <br />
                    <p><strong>E-MAIL ADDRESS:</strong></p>
                    <p>admin@s-s-s.co.za</p>
                </div>
            </div>

        </div>


    </div>

</section>

